<% provide(:title, t("title.registrations.register")) %>
<% provide(:base_title, t("base.title")) %>
<div class="col-6">
  <h1 class="text-center text-primary"><%= t "title.registrations.register" %></h1>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <%= f.label :email, t("user.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mt-3">
      <%= f.label :name, t("user.name") %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>


    <div class="field mt-3">
      <%= f.label :phone, t("user.phone") %><br />
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, t("user.password") %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t("text.minimum_password")%>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password_confirmation, t("user.re_password") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit t("submit.registrations.register"), class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</div>
<%= render "users/shared/logo"%>
