<%- if controller_name != 'sessions' %>
  <%= link_to t("links.login"), new_session_path(resource_name), class: "float-right p-2" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("links.signup"), new_registration_path(resource_name), class: "float-right p-2" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("links.forgot_password"), new_password_path(resource_name), class: "float-right p-2" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("links.confirmation"), new_confirmation_path(resource_name), class: "float-right p-2" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t("links.omniauthable") + "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
